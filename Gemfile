  gem 'jquery-rails'
  gem 'jeweler'
  gem 'sqlite3'
  gem 'thin'
  gem 'ruby-debug', :require => 'ruby-debug'
  # gem 'evergreen', :git => 'git://github.com/jnicklas/evergreen.git', :submodules  => true, :require => 'evergreen/rails'
end

